{% case media.media_type %}
  {% when 'image' %}
    <img
      src="{{ media |  img_url: 'large' }}"
      alt="{{ media.preview_image.alt |  escape }}"
      class="w-full h-full object-cover">
  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-full object-cover' }}
  {% when 'video' %}
    {{ media | video_tag: class: 'w-full h-80 object-cover' }}
  {% when 'model' %}{% else %}
{% comment %} Working on it {% endcomment %}
{% endcase %}