{% unless template == 'index' %}
<section class="paga-nagivtor-section d-none d-sm-block">
  <div class="container">
    <div class="page-navigator">
      <ul>
        <li><a href="{{ routes.root }}">Home</a></li>
        {% if template == 'index' %}
          <!-- Home Page - No additional breadcrumbs needed -->
        {% elsif template == 'page.contact' %}
          <i class="bi bi-chevron-right"></i>
          <li>Contact</li>
        {% elsif template == 'collection' %}
          <i class="bi bi-chevron-right"></i>
          <li>{{ collection.title }}</li>
        {% elsif template == 'product' %}
          <i class="bi bi-chevron-right"></i>
          <li><a href="{{ product.collection.url }}">{{ product.collection.title }}</a></li>
          <i class="bi bi-chevron-right"></i>
          <li>{{ product.title }}</li>
        {% elsif template == 'page' %}
          <i class="bi bi-chevron-right"></i>
          <li>{{ page.title }}</li>
        {% elsif template == 'blog' %}
          <i class="bi bi-chevron-right"></i>
          <li>{{ blog.title }}</li>
        {% elsif template == 'article' %}
          <i class="bi bi-chevron-right"></i>
          <li><a href="{{ article.blog.url }}">{{ article.blog.title }}</a></li>
          <i class="bi bi-chevron-right"></i>
          <li>{{ article.title }}</li>
        {% elsif template == 'search' %}
          <i class="bi bi-chevron-right"></i>
          <li>Search Results</li>
        {% else %}
          <i class="bi bi-chevron-right"></i>
          <li>{{ current_page }}</li>
        {% endif %}
      </ul>
      <ul>
        <li><a href="javascript:history.back()" class="back-page">
          <i class="bi bi-chevron-left"></i>Return to previous page
        </a></li>
      </ul>
    </div>
  </div>
</section>
{% endunless %}
