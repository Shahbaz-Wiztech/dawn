            <section class="author-details">
              <span class="title">
                <h2>About author</h2>
              </span>
              <div class="post">
                <img src="{{ 'placeholder.png' |  asset_url }}" width="auto" height="auto" alt="">
                <span class="d-flex flex-column">
                  <a href="#" class="media-link">{{ article.author }}</a>
                  <a href="{{ blog.url }}" class="author-link">Other posts by {{ article.author }}</a>
                </span>
              </div>
            </section>
            <section class="related-posts-container">
              <span class="title">
                <h2>Related posts</h2>
              </span>
              <div class="slides">
                <div class="swiper related-post">
                  <div class="swiper-wrapper">
                   {% assign blog = section.settings.related_blogs %}
                    {% for article in blog.articles %}
                        <div class="swiper-slide">
                            {% render 'related-blog-card', article: article %}
                            </div>
                      {% endfor %} 
                  </div>
                  <div class="swiper-button-next"></div>
                  <div class="swiper-button-prev"></div>
                </div>
              </div>
            </section>
            {% if section.settings.enable_comments %}
              <section class="comment-respond">
                <span class="title">
                  <h2>Leave a reply</h2>
                </span>
                <p>Your email address will not be published. Required fields are marked</p>
                <div id="comments_form">
                  {% form 'new_comment', article %}
                    {% if form.errors %}
                      <div class="alert alert-danger" role="alert">
                        {% render 'icon-failed' %}
                        Your form was not posted!
                        <ul>
                          {% for error in form.errors %}
                            <li>
                              <span>{{ form.errors.messages[error] }}</span>
                            </li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% elsif form.posted_successfully? %}
                      <div class="alert alert-success" role="alert" id="success-alert">
                        {% render 'icon-success' %}
                        Your Comment Posted Successfully!
                      </div>
                      <script>
                        document.addEventListener('DOMContentLoaded', function () {
                          const successAlert = document.getElementById('success-alert');
                          if (successAlert) {
                            setTimeout(() => {
                              successAlert.style.display = 'none';
                            }, 2000);
                          }
                        });
                      </script>
                    {% endif %}
                    <textarea name="comment[body]" id="comment_content" placeholder="comment" rows="6" cols="45"></textarea>
                    <div class="author-details">
                      <input type="text" name="comment[author]" id="comment_author" required placeholder="Your name (required)">
                      <input type="email" name="comment[email]" id="comment_email" required placeholder="Your email (required)">
                      <input type="link" name="comment[website]" placeholder="Your website">
                    </div>
                    <div class="d-flex align-items-center gap-1 mt-3">
                      <input type="checkbox" id="checkbox">
                      <label for="checkbox">Save my name, email, and website in this browser for the next time I comment.</label>
                    </div>
                    <button type="submit" class="btn btn-dark">Post Comment</button>
                {% endform %}
                </div>
              </section>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="supplementary-column">
          <div class="categories">
            <div class="head">
              <h4>Categories</h4>
            </div>
            <ul>
              {% assign categories = section.settings.blog_category.links %}
              {% for category in categories %}
                <li>
                  <a href="{{ category.url }}">{{ category.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class="product-tags">
            <div class="head">
              <h4>Product Tags</h4>
            </div>
            <div class="tagcloud-content">
              {%- for filter in collections.all.filters -%}
                {%- if filter.type == 'list' and filter.label contains 'Tags' -%}
                  {%- for filter_value in filter.values -%}
                    <a href="{{ product.url }}">{{ filter_value.label }}</a>
                  {%- endfor -%}
                {%- endif -%}
              {%- endfor -%}
            </div>
          </div>
          <div class="latest-posts">
            <div class="head">
              <h4>Latest Posts</h4>
            </div>
            <div class="posts-contianer">
              {% assign blog = section.settings.latest_blogs %}
              {% for article in blog.articles %}
                <div class="media">
                  <a class="pull-left" href="{{ article.url }}">
                    {% if article.image %}
                      <img src="{{ article.image |  img_url:'master' }}" width="auto" height="auto" alt="">
                    {% else %}
                      <img src="{{ 'product-placeholder-image.webp' |  asset_url }}" width="auto" height="auto" alt="">
                    {% endif %}
                  </a>
                  <div class="media-body">
                    <h4>
                      <a href="{{ article.url }}">{{ article.title | truncatewords: 2 }}</a>
                    </h4>
                    <span class="post-date">
                      <i class="bi bi-calendar4-week"></i>
                      <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
                    </span>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
