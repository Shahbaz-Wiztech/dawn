<section class="blog-detail-page blog-listing">
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <div class="blog-details-container">
          <div class="blog-card-item">
            <div class="blog-card-head">
              <span class="thumbnail-img">
                {% if article.image %}
                  <img
                    src="{{ article.image |  img_url: 'master' }}"
                    height="auto"
                    width="auto"
                    alt="{{ article.image.alt }}"
                  >
                {% else %}
                  <img
                    src="{{ 'bloglisting-thumb.webp' |  asset_url }}"
                    width="auto"
                    height="auto"
                    alt="article image"
                  >
                {% endif %}
              </span>
              <div class="category-name">
                <a href="{{ blog.url }}">{{ article.tags }}</a>
              </div>
            </div>
            <div class="blog-card-body">
              <a href="javascript:void(0);" class="title">
                <h2>{{ article.title }}</h2>
              </a>
              <div class="post-date">
                {% if section.settings.enable_published_date %}
                  <p>
                    <img src="{{ 'calendar.png' |  asset_url }}" width="auto" alt="calendar-icon" height="16">
                    {{ article.published_at | date: '%B %d, %Y' }} /
                  </p>
                {% endif %}
                {% if section.settings.enable_author %}
                  <p>
                    Posted by <a href="javascript:void(0);" class="mx-1">{{ article.author }}</a> /
                  </p>
                {% endif %}
                {% if section.settings.enable_views_count %}
                  <p>
                    <img src="{{ 'eye-icon.png' | asset_url }}" width="auto" alt="eye-icon" height="10">
                    2218 /
                  </p>
                {% endif %}
                {% if section.settings.enable_comment_count %}
                  <a href="javascript:void(0);">
                    <i class="bi bi-chat-left"></i>
                    {{ article.comments_count -}}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
