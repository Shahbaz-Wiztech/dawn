{% comment %} en.default.json (optional) {% endcomment %}
{% comment %} <h1>{{ 'templates.404.title' | t }}</h1>
<h1>{{ 'templates.404.subtext' | t }}</h1> {% endcomment %}
<div class="flex items-center justify-center flex-col">
  <h1 class="font-bold my-4 text-6xl">{{ section.settings.heading }}</h1>
  <p class="font-bold">{{ section.settings.description }}</p>
  {% if section.settings.button_url == blank %}
    {% comment %} {% assign shop_url = '/' %} {% endcomment %}
    {% assign shop_url = shop.secure_url %}

  {% else %}
    {% assign shop_url = section.settings.button_url %}

  {% endif %}
  <a href="{{ shop_url }}" class="my-3 underline text-blue-500">{{ section.settings.button_label }}</a>
</div>

{% schema %}
  {
    "name": "404",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Add 404 Heading",
        "default": "404"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Add Description",
        "default": "Page you were looking for does not exist."
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "button label",
        "default": "Back to homepage"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "button url"
      }
    ]
  }
{% endschema %}