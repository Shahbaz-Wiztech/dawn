<h1 class="text-6xl font-bold w-full text-center my-8">{{ section.settings.title }}</h1>
<div class="flex items-start gap-5">
  {% for item in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}

    {% render 'product-card'
      , product: item %}
      {% else %}
      {% for item in (1..4) %}
        
        {% render 'product-card-placeholder' %}
    {% endfor %}

  {% endfor %}
</div>


{% schema %}
  {
    "name": "featured collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Add Title",
        "default": "Featured Collection"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "number_of_products_to_show",
        "max": 12,
        "min": 1,
        "default": 4,
        "label": "Number Of Products To Show"
      }
    ],
    "presets": [
        {
            "name": "featured collection"
        }
    ]
  }
{% endschema %}