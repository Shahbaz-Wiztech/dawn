<div class="flex flex-col items center my-8">
  {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16 text-center">{{ section.settings.title }}</h1>
  {% endif %}
  {% form 'contact' %}
    {% if form.errors %}
      <div class="border max-w-6xl mx-auto p-5">
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-red-500">
            {% render 'icon-failed' %}
          </div>
          <div class="text-sm font-medium ml-3">
            oh no! your Form was not posted
          </div>
        </div>
        <ul class="px-4 mb-3 ml-7 list-decimal">
          {% for error in form.errors %}
            <li>
              <span>{{ form.errors.messages[error] }}</span>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="border max-w-6xl mx-auto p-5">
        <div class="flex flex-row items-center w-full my-3">
          <div class="text-green-500">
            {% render 'icon-success' %}
          </div>
          <div class="text-sm font-medium ml-3">
            your Form posted successfully
          </div>
        </div>
      </div>
    {% endif %}
    <div class="max-w-6xl mx-auto flex flex-col">
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-600 font-medium hover:text-gray-900" for="contact_name">Name</label>
          <input
            type="text"
            name="contact[name]"
            id="contact_name"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-600 font-medium hover:text-gray-900" for="contact_email">Email</label>
          <input
            type="email"
            name="contact[email]"
            id="contact_email"
            class="border py-3 px-4 mb-3 text-gray-700 w-full">
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label class="uppercase text-xs text-gray-600 font-medium hover:text-gray-900" for="contact_message">Message</label>
          <textarea
            name="contact[body]"
            id="contact_message"
            class="border py-3 px-4 mb-3 text-gray-700 w-full"></textarea>
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <input
            type="submit"
            value="Submit Message"
            class="border text-base cursor-pointer font-medium text-white py-3 px-4 mb-3 bg-gray-700 w-full">
        </div>
      </div>
    </div>
  {% endform %}
</div>

{% schema %}
  {
    "name": "contact form",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Add Title"
      }
    ],
    "presets": [
      {
        "name": "Contact Form"
      }
    ]
  }
{% endschema %}